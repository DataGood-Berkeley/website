<section class="member-gallery">
	{{#each members}}
		<div class="card">
			<div class="img-container rounded">
				<img src="{{image}}">
			</div>
			<div class="position">{{position}}</div>
			<div class="name">{{name}}</div>
			<div class="social-links">
				{{#if socials.github}}
					<div class="social github"></div>
				{{/if}}
				{{#if socials.linkedin}}
					<a class="social linkedin" href="{{socials.linkedin}}"></a>
				{{/if}}
				{{#if socials.facebook}}
					<a class="social facebook" href="{{socials.linkedin}}"></a>
				{{/if}}				
			</div>
		</div>	
	{{/each}}
</section>
