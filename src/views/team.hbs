{{> title-section}}

<section>
	<div class="text-container">
		<h1>executives.</h1>
		<p class="green-back"> Come meet the team and the driving force behind DataGood @ Berkeley! If you have any questions about DataGood or any of the specific roles, please don't hesitate to contact any of the members below. </p>
	</div>
	<div class="img-container">
		<img src="/images/executives.png" alt="Executives">
	</div>
</section>

<section class="member-gallery">
	{{#each members}}
		<div class="card">
			<div class="img-container rounded">
				<img src="{{image}}" alt="{{name}}">
			</div>
			<div class="position">{{position}}</div>
			<div class="name">{{name}}</div>
			<div class="social-links">
				{{#if socials.github}}
					<a class="social github" href="{{socials.github}}" target="_blank" rel="noreferrer noopener"></a>
				{{/if}}
				{{#if socials.linkedin}}
					<a class="social linkedin" href="{{socials.linkedin}}" target="_blank" rel="noreferrer noopener"></a>
				{{/if}}
				{{#if socials.facebook}}
					<a class="social facebook" href="{{socials.linkedin}}" target="_blank" rel="noreferrer noopener"></a>
				{{/if}}
			</div>
		</div>
	{{/each}}
</section>
