{{> title-section}}

<section class="mission-section alone">
  <div class="text-container">
    <p>{{mission.text}}</p>

    {{#if mission.highlights}}
      <div class="stats-grid">
        {{#each mission.highlights}}
          <div class="tile">
            <div class="large-text">{{this.number}}</div>
            <div class="description-text">{{this.label}}</div>
          </div>
        {{/each}}
      </div>
    {{/if}}
  </div>
</section>
